{
  "manifest_version": 3,
  "name": "Chrome Workspace",
  "version": "1.0",
  "description": "为Chrome带来类似Edge的Workspace功能",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "scripting",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "persistent": false
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 